{
  "name": "Pomo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A nifty pomodoro productivity app!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "js": ["jquery.js"]
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icons/16x16.png",
    "20": "icons/20x20.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  }
}
