{
  "name": "Pomo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A nifty pomodoro productivity app!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "js": ["jquery.js"]
  },
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "icons": {
    "16": "icons/pomo_icon.png",
    "48": "icons/pomo_icon.png",
    "128": "icons/pomo_logo_big.png"
  }
}
